@model List<HighLandCoffeeWebsite.Models.New>

@{
    ViewBag.Title = "ViewBlog";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<style>
    .blog_box {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        text-align: center;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        position: relative;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .blog_box:hover {
            box-shadow: 0px 8px 12px rgba(0, 0, 0, 0.2);
        }

    .blog_img {
        overflow: hidden;
        border-radius: 8px;
    }

        .blog_img img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

    .blog_box:hover .blog_img img {
        transform: scale(1.1);
    }


    .date_text {
        font-size: 14px;
        color: #888;
        margin-top: 10px;
    }

    .prep_text {
        font-size: 18px;
        font-weight: bold;
        margin-top: 10px;
    }

    .lorem_text {
        font-size: 14px;
        color: #555;
        margin-top: 10px;
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

</style>
<!-- blog section start -->
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-4">
                <br />
                <h1 class="about_taital" style="font-weight:bold;color:#53382C">TIN TỨC</h1>
                <br />
            </div>
        </div>
        <div class="blog_section_2">
            @if (Model != null && Model.Count > 0)
            {
                int count = 0;
                foreach (var item in Model)
                {
                    if (count % 3 == 0)
                    {
                        @:<div class="row">
                        }

                        <div class="col-md-4">
                            <div class="blog_box">
                                <div class="blog_img">
                                    <img src="@Url.Content("~/Content/img/" + @item.Image)" alt="Blog Image" class="img-fluid">
                                </div>
                                <h4 class="date_text">@item.PostedDate.ToString("dd/MM/yyyy")</h4>
                                <h4 class="prep_text">@item.Title</h4>
                                <p class="lorem_text text-truncate">@item.Content</p>
                            </div>
                        </div>

                        count++;

                        if (count % 3 == 0 || count == Model.Count)
                        {
                        @:</div>
                    }
                }
            }
            else
            {
                <p>Không có tin tức nào để hiển thị.</p>
            }
        </div>
    </div>
<!-- blog section end -->
